<section id="content">
  <%= Discussion %>
</section>

<script type="text/jsx">

  var DiscussionShow = React.createClass({
    loadCommentsFromServer: function () {
      $.ajax({
        url: this.props.url,
        dataType: 'json',
        cache: false,
        success: function (data) {
          this.setState({data: data});
        }.bind(this),
        error: function (xhr, status, err) {
          console.error(this.props.url, status, err.toString());
        }.bind(this)
      });
    },
    handleCommentSubmit: function (comment) {
      var comments = this.state.data.comments;
      var newComments = comments.concat([comment]);
      this.setState({data: newComments});
      $.ajax({
        url: "http://localhost:3000/api/comments",
        dataType: 'json',
        type: 'POST',
        data: comment,
        success: function (data) {
          this.setState({data: data});
        }.bind(this),
        error: function (xhr, status, err) {
          console.error(this.props.url, status, err.toString());
        }.bind(this)
      });
    },
    getInitialState: function () {
      return {data: []};
    },
    componentDidMount: function () {
      this.loadCommentsFromServer();
      setInterval(this.loadCommentsFromServer, this.props.pollInterval);
    },
    render: function () {
      var url = "http://localhost:3000/discussions/" + this.state.data.id;
      console.log(this.state.data.comments);
      return (
        <div className="discussion">
          <h1 className="discussionTitle">{this.state.data.title}</h1>
          <p className="discussionAuthor">
            Author: {this.state.data.author_name}
          </p>
          <br />
          <CommentsList data={this.state.data.comments}/>
          <CommentForm submitComment={this.handleCommentSubmit} />
        </div>
      );
    }
  });

  var CommentsList = React.createClass({
    render: function () {
      var commentNodes = [];
      commentNodes = this.props.data && this.props.data.map(function (comment) {
        return (
          <Comment author={comment.author_fname + " " + comment.author_lname}
                   content={comment.content} />
        );
      });
      return (
        <div className="commentList">
          {commentNodes}
        </div>
      );
    }
  });

  var Comment = React.createClass({
    render: function () {
      return (
        <div className="comment">
          <h2 className="commentAuthor">
            {this.props.author}
          </h2>
          <span>{this.props.content}</span>
          <br />
          <br />
        </div>
      );
    }
  });

  var CommentForm = React.createClass({
    handleSubmit: function (event) {
      event.preventDefault();
      var text = React.findDOMNode(this.refs.text).value.trim();
      if (!text) {
        return;
      }
      // send information to server in function callback
      this.props.submitComment({text: text});
      // reset form
      React.findDOMNode(this.refs.text).value="";
      return;
    },
    render: function () {
      return (
        <form className="commentForm" onSubmit={this.handleSubmit}>
          <input type="text" placeholder="Your comment..." ref="text" />
          <input type="submit" value="Post" />
        </form>
      );
    }
  });

  React.render(
    <DiscussionShow pollInterval={2000} url="http://localhost:3000/api/discussions/<%= @discussion.id %>"/>,
    document.getElementById('content')
  );
</script>
