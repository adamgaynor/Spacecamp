<a class="project-link"
   href="<%= "#projects/" + project.id %>"><%= project.escape("title") %></a>

<h1>Post a new Message</h1>

<input type="text" name="title" value=""
       placeholder="Type the subject of the discussion...">
<textarea name="content" rows="8" cols="40"
          placeholder="Type your opening remarks here..."></textarea>

<button>Post this message</button>
or
<a class="cancel"
   href="<%= "#projects/" + project.id %>">Cancel</a>
